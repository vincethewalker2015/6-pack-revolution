<div class="show-panel">
  <div class="card show-card">
    <h1 class="text-center mt-4">Category: <%= @category.name %></h1>
    <div class="text-center mt-2 mb-1">
      <% if logged_in? && current_chef.admin? %>
      <%= link_to "Edit Category", edit_category_path(@category), class: "btn btn-primary btn-lg nice_green" %> 
      <%= link_to "Delete Category", category_path(@category), class: "btn btn-primary btn-lg nice_green", method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>
      <% end %>
    </div>
    </div>
    <h3 class="text-center mt-4 object-color-orange col-8 offset-2">Menus:</h3>

    <%= render "recipes/listing", obj: @category.recipes%>
  </div>
</div>
